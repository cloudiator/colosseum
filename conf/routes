# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                      @controllers.SiteController.index()
GET           /manage                                @controllers.SiteController.manage()
GET           /help                                  @controllers.SiteController.help()

#Auth for browser
GET           /login                                 @controllers.SecurityController.login()
POST          /login                                 @controllers.SecurityController.authenticate()
GET           /logout                                @controllers.SecurityController.logout()

#Auth for api
POST          /api/login                             @controllers.SecurityController.authenticateApi()
GET           /api/logout                            @controllers.SecurityController.logout()

#Application
GET           /api/application                       @controllers.ApplicationController.list()
GET           /api/application/:id                   @controllers.ApplicationController.get(id: Long)
PUT           /api/application                       @controllers.ApplicationController.create()
POST          /api/application/:id                   @controllers.ApplicationController.update(id: Long)
DELETE        /api/application/:id                   @controllers.ApplicationController.delete(id: Long)

#ApplicationComponent
GET           /api/applicationComponent              @controllers.ApplicationComponentController.list()
GET           /api/applicationComponent/:id          @controllers.ApplicationComponentController.get(id: Long)
PUT           /api/applicationComponent              @controllers.ApplicationComponentController.create()
POST          /api/applicationComponent/:id          @controllers.ApplicationComponentController.update(id: Long)
DELETE        /api/applicationComponent/:id          @controllers.ApplicationComponentController.delete(id: Long)


